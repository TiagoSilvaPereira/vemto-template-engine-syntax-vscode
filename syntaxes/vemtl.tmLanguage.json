{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Vemto Template Engine",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#interpolations"
		},
		{
			"include": "#logics"
		},
		{
			"include": "#uplogics"
		},
		{
			"include": "#imports"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#modes"
		},
		{
			"include": "#vtheme"
		}
	],
	"repository": {
		"comments": {
			"name": "comment",
			"begin": "<#",
			"end": "#>"
		},
		"interpolations": {
			"name": "support.function",
			"begin": "<\\$",
			"end": "\\$>"
		},
		"logics": {
			"name": "entity.name.function",
			"begin": "<%",
			"end": "%>",
			"patterns": [
				{
					"include": "#variables"
				}
			]
		},
		"uplogics": {
			"name": "entity.name.function",
			"begin": "<up",
			"end": "up>",
			"patterns": [
				{
					"include": "#variables"
				}
			]
		},
		"imports": {
			"name": "variable.parameter",
			"begin": "<import",
			"end": ">"
		},
		"variables": {
			"patterns": [{
				"name": "keyword",
				"match": "(this|var|let|const|if|else)(?=(\\.|\\s))(?=((.*)(%>))|((.*)(up>))|((.*)(\\$>)))"
			}]
		},
		"modes": {
			"patterns": [{
				"name": "variable.parameter",
				"match": "<\\*(.*)\\*>"
			}]
		},
		"vtheme": {
			"patterns": [{
				"name": "variable.parameter",
				"match": "vtheme\\((.*?)\\)"
			}]
		}
	},
	"scopeName": "source.vemtl"
}